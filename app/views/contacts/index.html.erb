<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Position</th>
      <th>Profesion</th>
      <th>Phone</th>
      <th>I email</th>
      <th>Mobile phone</th>
      <th>P email</th>
      <th>School</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.position %></td>
        <td><%= contact.profesion %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.i_email %></td>
        <td><%= contact.mobile_phone %></td>
        <td><%= contact.p_email %></td>
        <td><%= contact.school.to_s %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

