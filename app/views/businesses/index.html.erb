<p id="notice"><%= notice %></p>

<h1>Businesses</h1>

<%= column_chart @potential_business_by_day %>
<%= column_chart @volume_business_by_day %>



<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Product</th>
      <th>Amount</th>
      <th>Description</th>
      <th>User</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.name %></td>
        <td><%= business.product %></td>
        <td><%= business.amount %></td>
        <td><%= business.description %></td>
        <td><%= business.user %></td>
        <td><%= business.contact %></td>
        <td><%= link_to 'Show', business %></td>
        <td><%= link_to 'Edit', edit_business_path(business) %></td>
        <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Business', new_business_path %>
